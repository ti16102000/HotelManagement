@model HotelManagement.Models.ViewModel.ServiceView

@{
    ViewBag.Title = "GetService";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a href="@Url.Action("ServiceList")" class="btn btn-sm btn-info" style="background-color:#4e73df;font-size:20px;float:right;">
    <i class="fa fa-arrow-right"></i>
</a>

<section class="panel" style="margin-top:55px;">
    <header class="panel-heading">
        Edit Service
    </header>
    <form action="@Url.Action("UpdateService")" method="POST" enctype="multipart/form-data">
        <div class="panel-body">
            <div class="position-center">
                <div class="form-group">
                    <input type="hidden" name="IDService" value="@Model.IDService" />
                    <label for="">Service Name:</label>
                    <input type="text" class="form-control" name="NameService" maxlength="40" value="@Model.NameService" required>
                </div>
                <div class="form-group">
                    <label>Category Name:</label>
                    <select name="IDCateSer">
                        <option value="@Model.IDCateSer">@Model.NameCateSer</option>
                        @foreach (var item in ((IEnumerable<HotelManagement.Models.ViewModel.CategoryServiceView>)TempData["cbb"]))
                        {
                            <option value="@item.IDCateSer">@item.NameCateSer</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Price:</label>
                    <input type="text" class="form-control" name="PriceService" maxlength="6" pattern="[\d]+" title="Price is number not letter" value="@Model.PriceService" required>
                </div>
                <button type="submit" name="submit" class="btn btn-info">Submit</button>
            </div>
        </div>
    </form>
</section>


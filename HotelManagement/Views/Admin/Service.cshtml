@model IEnumerable<HotelManagement.Models.ViewModel.CategoryServiceView>

@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a href="@Url.Action("ServiceList")" class="btn btn-sm btn-info" style="background-color:#4e73df;font-size:20px;float:right;">
    <i class="fa fa-arrow-right"></i>
</a>

<section class="panel" style="margin-top:55px;">
    <header class="panel-heading">
        Create Service
    </header>
    <form action="@Url.Action("CreateService")" method="POST" enctype="multipart/form-data">
        <div class="panel-body">
            <div class="position-center">
                <div class="form-group">
                    <label for="">Service Name:</label>
                    <input type="text" class="form-control" name="NameService" maxlength="40" required>
                </div>
                <div class="form-group">
                    <label>Category Name:</label>
                    <select name="IDCateSer">
                        @foreach (var item in Model)
                        {
                            <option value="@item.IDCateSer">@item.NameCateSer</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Price:</label>
                    <input type="text" class="form-control" name="PriceService" maxlength="6" pattern="[\d]+" title="Price is number not letter" required>
                </div>
                <button type="submit" name="submit" class="btn btn-info">Submit</button>
            </div>
        </div>
    </form>
</section>


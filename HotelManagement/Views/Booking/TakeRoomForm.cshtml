@model HotelManagement.Models.ViewModel.BookingView
@{
    ViewBag.Title = "TakeRoomForm";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div id="content" style="max-width: 40%;">
    <a href="@Url.Action("InformationBooking",new { token=Model.TokenBooking})" class="btnBack"> &#x2B05; Back to your booking</a><br>
    <label for="" style="font-size: 20px;color: floralwhite;">Category room: <b style="color:gold;">@Model.NameCateRoom</b></label><br>
    <span style="font-size: 18px;color: floralwhite;">Number of rooms booked: <b id="checkNumber" style="color:springgreen;">@(TempData["diff"]??Model.NumberRoom)</b></span>
    <div id="listRoom">
        <input type="hidden" id="IDBooking" value="@Model.IDBooking" />
        <input type="hidden" id="TokenBooking" value="@Model.TokenBooking" />
        @foreach (var item in ((IEnumerable<HotelManagement.Models.ViewModel.RoomView>)TempData["room"]))
        {
            <div class="itemRoom" data-idRoom="@item.IDRoom">
                <span>@item.NameRoom</span>
            </div>
        }
    </div>
    <div id="btnRoom">Submit</div>
</div>

